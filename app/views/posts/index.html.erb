<h1>Listing Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @posts.each do |post| %>
      <tr>
        <td><%= post.tittle %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
      </tr>
  <% end %>
</table>
<%= link_to 'New Post', new_post_path %>
<%= link_to 'Home', home_index_path %>
