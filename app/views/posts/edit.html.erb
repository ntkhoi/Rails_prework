<h1>Editing Post</h1>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :tittle %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :content %>
    </p>

    <p>
      <%= f.submit %>
    </p>

<% end %>

<%= link_to 'Back', posts_path %>